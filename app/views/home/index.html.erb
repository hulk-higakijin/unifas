<%= render "layouts/navbar" %>
<!-- Section 1 -->
<section class="px-2 py-32 bg-white md:px-0">
  <div class="container items-center max-w-6xl px-8 mx-auto xl:px-5">
    <div class="flex flex-wrap items-center sm:-mx-3">
      <div class="w-full md:w-1/2 md:px-3">
        <div
          class="w-full pb-6 space-y-6 sm:max-w-md lg:max-w-lg md:space-y-4 lg:space-y-8 xl:space-y-9 sm:pr-5 lg:pr-0 md:pb-0">
          <h1
            class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-4xl lg:text-5xl xl:text-6xl">
            <p class="block xl:inline">全く新しい</p><br>
            <p class="block text-primary xl:inline">大学選びのカタチ</p>
          </h1>
          <p class="mx-auto text-base text-gray-500 sm:max-w-md lg:text-xl md:max-w-3xl">知名度や偏差値だけで志望校を決めていませんか？<br>
          受験は人生で大事なイベントです。<br>
          後悔しないためにも、Unifasで教授のホンネを聞いてみませんか？</p>
          <div class="relative flex flex-col sm:flex-row sm:space-x-4">
            <%= link_to new_account_registration_path, class: "flex btn btn-primary" do %>
              Subscribe here <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-1" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            <% end %>
            <%= link_to "Learn More", "#", class: "btn btn" %>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2">
        <div class="w-full h-auto overflow-hidden rounded-md shadow-xl sm:rounded-xl">
          <%= image_tag 'classroom.jpg' %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section 2 -->
<section class="py-20 bg-white">
  <div class="container max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold tracking-tight text-center">Our Features</h2>
    <p class="mt-2 text-lg text-center text-gray-600">教育の概念をひっくり返せ</p>
    <div class="grid grid-cols-4 gap-8 mt-10 sm:grid-cols-8 lg:grid-cols-12 sm:px-8 xl:px-0">
      <% features.each do |feature| %>
        <div class="flex flex-col items-center justify-between col-span-4 px-8 py-12 space-y-4 overflow-hidden bg-gray-100 sm:rounded-xl">
          <div class="text-white bg-primary rounded-full w-16 h-16 flex">
            <i class="<%= feature[:icon] %> m-auto h-7"></i>
          </div>
          <h4 class="text-xl font-medium text-gray-700"><%= feature[:title] %></h4>
          <p class="text-base text-center text-gray-500"><%= feature[:body] %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>
